{
  "expo": {
    "name": "Ứng Dụng Nghe Nhạc",
    "slug": "music-player-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "../assets/spotify.png",
    "splash": {
      "image": "../assets/spotify.png",
      "resizeMode": "contain",
      "backgroundColor": "#1DB954"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Ứn dụng cầng quyền truy cập microphone để phát nhạc"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "../assets/adaptive-icon.png",
        "backgroundColor": "#1DB954"
      },
      "permissions": ["RECORD_AUDIO"]
    },
    "web": {
      "favicon": "../assets/favicon.png"
    }
  }
}